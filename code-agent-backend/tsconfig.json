{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "jest"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src-mg",
    "test"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}